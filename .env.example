# ============================================
# BACKEND ENVIRONMENT VARIABLES
# ============================================

# Server
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/movies_space

# Redis (Cache)
REDIS_URL=redis://localhost:6379

# JWT Auth
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=15m
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRY=7d

# AWS S3 / Minio
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=movies-space-media
S3_ENDPOINT=https://s3.amazonaws.com
# For Minio (local): S3_ENDPOINT=http://localhost:9000

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# File Upload
MAX_FILE_SIZE=104857600
MAX_UPLOAD_SIZE=104857600
ALLOWED_UPLOAD_TYPES=audio/mpeg,audio/mp4,audio/wav,audio/ogg

# ============================================
# FRONTEND ENVIRONMENT VARIABLES
# ============================================

VITE_API_URL=http://localhost:3000/api/v1
VITE_ENV=development

# Feature Flags
VITE_FEATURE_OFFLINE_MODE=true
VITE_FEATURE_UPLOADS=true
