{
  "buildCommand": "cd movies_space && npm run build",
  "outputDirectory": "movies_space/dist",
  "devCommand": "cd movies_space && npm run dev",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "env": {
    "VITE_API_BASE_URL": "@vite_api_base_url",
    "VITE_GOOGLE_DRIVE_API_KEY": "@vite_google_drive_api_key",
    "VITE_GOOGLE_DRIVE_FOLDER_ID": "@vite_google_drive_folder_id",
    "VITE_EMAILJS_SERVICE_ID": "@vite_emailjs_service_id",
    "VITE_EMAILJS_TEMPLATE_ID": "@vite_emailjs_template_id",
    "VITE_EMAILJS_PUBLIC_KEY": "@vite_emailjs_public_key"
  },
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs20.x"
    }
  }
}
